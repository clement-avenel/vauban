<% content_for :title, "Edit #{@document.title} - Vauban Demo" %>

<div style="margin-bottom: 1rem;">
  <%= link_to "â† Back to Document", @document, style: "color: #007bff; text-decoration: none;" %>
</div>

<div style="border: 1px solid #ddd; border-radius: 4px; padding: 2rem; background: white; max-width: 600px;">
  <h1 style="margin: 0 0 1.5rem 0;">Edit Document</h1>

  <%= form_with model: @document, local: true do |form| %>
    <% if @document.errors.any? %>
      <div style="background: #f8d7da; color: #721c24; padding: 0.75rem; border-radius: 4px; margin-bottom: 1rem;">
        <h3 style="margin: 0 0 0.5rem 0; font-size: 1rem;"><%= pluralize(@document.errors.count, "error") %> prohibited this document from being saved:</h3>
        <ul style="margin: 0; padding-left: 1.5rem;">
          <% @document.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div style="background: #e7f3ff; padding: 1rem; border-radius: 4px; margin-bottom: 1rem; border-left: 4px solid #007bff;">
      <p style="margin: 0; font-size: 0.9rem;">
        <strong>ðŸ’¡ Authorization Check:</strong> This page is only accessible because you have <code>:edit</code> permission.
        The controller calls <code>authorize! :edit, @document</code> which would raise <code>Vauban::Unauthorized</code> if you didn't have permission.
      </p>
    </div>

    <div style="margin-bottom: 1rem;">
      <%= form.label :title, style: "display: block; margin-bottom: 0.5rem; font-weight: bold;" %>
      <%= form.text_field :title, style: "width: 100%; padding: 0.5rem; border: 1px solid #ddd; border-radius: 4px; font-size: 1rem;" %>
    </div>

    <div style="margin-bottom: 1rem;">
      <%= form.label :content, style: "display: block; margin-bottom: 0.5rem; font-weight: bold;" %>
      <%= form.text_area :content, rows: 10, style: "width: 100%; padding: 0.5rem; border: 1px solid #ddd; border-radius: 4px; font-size: 1rem; font-family: inherit;" %>
    </div>

    <div style="margin-bottom: 1rem;">
      <%= form.label :public, style: "display: flex; align-items: center; gap: 0.5rem; cursor: pointer;" do %>
        <%= form.check_box :public %>
        <span>Make this document public (anyone can view it)</span>
      <% end %>
    </div>

    <div style="margin-bottom: 1rem;">
      <%= form.label :archived, style: "display: flex; align-items: center; gap: 0.5rem; cursor: pointer;" do %>
        <%= form.check_box :archived %>
        <span>Archive this document (archived documents cannot be deleted)</span>
      <% end %>
    </div>

    <div style="display: flex; gap: 0.5rem; margin-top: 1.5rem;">
      <%= form.submit "Update Document", style: "padding: 0.75rem 1.5rem; background: #007bff; color: white; border: none; border-radius: 4px; font-size: 1rem; cursor: pointer;" %>
      <%= link_to "Cancel", @document, style: "padding: 0.75rem 1.5rem; background: #6c757d; color: white; text-decoration: none; border-radius: 4px; display: inline-block;" %>
    </div>
  <% end %>
</div>
